<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Davidova_webovka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Davidova_webovka.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MOARCH BIM . CAD . PROJEKCE . ARCHITEKTURA</a>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-4 text-md-right">
                    <div class="btn-group" role="group" aria-label="Výběr kandidáta">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">SLUŽBY</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Kontakt">KONTAKT</a>
                        <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Poptavka">NEZÁVAZNÁ POPTÁVKA</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            David šmíd Pobřežní 161 357 03 Svatava IČ: 03526551 Podnikatel je zapsán v živnostenském rejstříku. 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
